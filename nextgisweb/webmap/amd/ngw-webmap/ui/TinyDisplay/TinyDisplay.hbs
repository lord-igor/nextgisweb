<div data-dojo-type="${baseClass}"
     data-dojo-attach-point="focusNode"
     style="width: 100%; height: 100%">


    <div data-dojo-attach-point="mapPane"
         data-dojo-type="dijit/layout/ContentPane"
         data-dojo-props="region: 'center'"
         style="width: 100%; height:100%; padding: 0;">

        <div data-dojo-attach-point="mapNode"
             style="position: absolute: width: 100%; height: 100%; padding: 0;"
             class="tiny-map">

            <div data-dojo-attach-point="leftTopControlPane"
                 class="control-pane control-pane--top control-pane--left"></div>
            <div data-dojo-attach-point="leftBottomControlPane"
                 class="control-pane control-pane--bottom control-pane--left"></div>
            <div data-dojo-attach-point="rightBottomControlPane"
                 class="control-pane control-pane--top control-pane--right"></div>
            <div data-dojo-attach-point="rightBottomControlPane"
                 class="control-pane control-pane--bottom control-pane--right"></div>

            <a class="map-logo" href="http://nextgis.com" target="_blank">
                <img width="91" height="auto" alt="{{gettext 'Get your own Web GIS at nextgis.com'}}"
                     src="${assetUrl}img/logo_outline.png"/>
            </a>
        </div>
    </div>
</div>
